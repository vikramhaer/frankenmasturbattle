<div class="content-box hotlist left">
<h2 class="center-text">Hottest males</h2>
<table class="rankings">
  <tr>
    <th></th>
    <th></th>
    <th>Score</th>
    <th>Win</th>
    <th>Loss</th>
  </tr>

<% @top_males.each do |user| %>
  <tr>
    <td class="piccell cell"><%= image_tag("http://graph.facebook.com/#{user.uid}/picture", :class=>"battle left") %> 
    <td class="name namecell cell"><%= user.name.split(" ")[0] %></td>
    <td class="numcell"><%= user.score.to_i %></td>
    <td class="numcell"><%= user.win %></td>
    <td class="numcell"><%= user.loss %></td
  </tr>
<% end %>
</table>
</div>

