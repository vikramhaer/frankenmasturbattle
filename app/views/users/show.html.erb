  <%= image_tag("http://graph.facebook.com/#{@user.uid}/picture", :class=>"left profimg") %>

<p class="username left">
  <%= link_to @user.name, "http://www.facebook.com/profile.php?id=#{@user.uid}" %>
</p>
<div style="clear:both;"></div>
				<div class="statbox4">
					<div class="stattitle">Battles Voted On</div>
					<div class="statcontent">
						<span class="bignumber">?</span>
					</div>
				</div>
				<div class="statbox4">
					<div class="stattitle">Battles Won</div>
					<div class="statcontent">
						<span class="bignumber"><%= @user.win %></span>/<%= @user.win + @user.loss %>
					</div>
				</div>
				<div class="statbox4">
					<div class="stattitle">Score</div>
					<div class="statcontent">
						<span class="bignumber"><%= Integer(@user.score.round) %></span>
					</div>
				</div>
				<div class="statbox4">
					<div class="stattitle">Frankers</div>
					<div class="statcontent">
						<span class="bignumber">?</span>
					</div>
          <div style="clear:both;"></div>	
				</div>
						
	<div class="statbox2">
				<div class="stattitle">Network Rankings</div>
<img src="http://chart.apis.google.com/chart?chs=400x210&cht=gm&chd=t:70" width="400" height="210" alt="" />
				</div>
				
				<div class="statbox2">
								<div class="stattitle">Networks</div>

				<ul class="statlists">
          <% for group in @user.groups %>
          <li><strong><%=h link_to group.name, group %></strong</li>
          <% end %>
				</ul>
				</div>
			
			<div style="clear:both;"></div>
  
  <div class="statbox1">
				<div class="stattitle">Hottest Friends </div>
        <% for friend in @user_friends %>
				<div class="friend-box">
				<%= image_tag("http://graph.facebook.com/#{friend.uid}/picture", :class=>"battle") %>
				<p class="boldit lastround"><%=h friend.name %></p>
				<p class="boldit score"><%=h Integer(friend.score.round) %></p>
				</div>
        <% end %>
					<div style="clear:both;"></div>
	</div>
