<%= if current_user then javascript_include_tag "battle" end %>

  <% if current_user %>
	
			<div id="left-column">
				<div class="ad-col">
					<img src="http://dummyimage.com/120x240" class="side-ad" />
					<img src="http://dummyimage.com/120x240" class="side-ad" />
				</div>
			</div>
			<div id="main">
				<div id="battleground">
          <%= render "bground" %>

        </div>
				<div id="battleground-history" class="old">
					<%= render "bground_history" %>
				</div>
			</div>
			<div id="right-column">
				<div class="ad-col">
					<img src="http://dummyimage.com/120x240" class="side-ad"/>
					<img src="http://dummyimage.com/120x240" class="side-ad"/>
				</div>
			</div>
			<div style="clear:both;"></div>
      <% else %>
      <%= render "splash" %>
  <% end %>
