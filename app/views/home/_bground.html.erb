<div id="left" class="battlesquare hoverable">
  <div class="battlepic">
  <%= link_to large_pic(@left_user, {:class=>"fixedheight"}), {:controller=>"home", :action => "battle_update", :choice => 'left'}, :remote => true, :id=>"left-link" %>
  </div>
  <p class="name"><%= @left_user.name %> </p>
  
  </div>
<div id="mid">
VS.
</div>
<div id="right" class="battlesquare hoverable">
  <div class="battlepic">
  <%= link_to large_pic(@right_user, {:class=>"fixedheight"}), {:controller=>"home", :action=>"battle_update", :choice => 'right'}, :remote=>true, :id=>"right-link" %>
  </div>
  <p class="name"><%= @right_user.name %></p>
</div>
<div style="clear:both;"></div>
<%= form_tag '/somethingwrong', :remote => true, :class => 'submittable' do %>
  <%= check_box_tag 'gender', 'male' %> male
  <%= check_box_tag 'gender', 'female' %> female
