<!DOCTYPE html>
<html>
<head>
  <title>getFrankd</title>
  <%= stylesheet_link_tag "style" %>
   <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
	<div id="wrapper">
		<h1><%= link_to "getFrankd", root_path, :class=>"no-dec" %></h1>
		<div id="right-nav">
		<% if current_user %>
		<ul>
			<li><%= link_to "Sign Out", signout_path %></li>
		<!--	<li><%= link_to "Start Franking", root_path %></li> -->
			<li><%= link_to "Rankings", users_path %></li>
			<li><%= link_to current_user.name, current_user %></li>
		</ul>
		<%= image_tag("http://graph.facebook.com/#{current_user.uid}/picture" , :class=>"left userimg") %>
<% else %>
  <%= link_to "Sign in with Facebook", "/auth/facebook" %>
<% end %>
		</div>
	</div>
  </div>
    <div id="content">

	<div id="wrapper">
<%= yield %>
  </div>
  </div>
  	<div id="footer">
	
	</div>
</body>
</html>
