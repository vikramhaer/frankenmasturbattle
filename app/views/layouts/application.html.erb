	<div id="wrapper">
  <div id="top-ad" class="banner-ad">
      <iframe id="top-ad-frame" width="750" height="98" src="" frameborder="0" scrolling="no" style="margin:0 auto; border:none;"></iframe>
  </div>
<%= yield %>
  </div>
  </div>
 <% else %>
 <%= yield %>
<% end %>
<% if current_user %>
  <div id="bottom-ad" class="banner-ad">
  <iframe id="bottom-ad-frame" width="750" height="98" src="" frameborder="0" scrolling="no"></iframe>
  </div>
<% end %>
